<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InputDataActivity">

    <LinearLayout
        android:id="@+id/container_for_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="90dp"
        android:orientation="vertical"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:paddingBottom="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:id="@+id/container_for_basic_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/id_and_name_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/edit_txt_id"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="ID"
                    android:singleLine="true" />

                <EditText
                    android:id="@+id/edit_txt_name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="text"
                    android:hint="名前"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/birthday_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/edit_txt_birthday"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="生年月日"
                    android:focusable="false"
                    android:inputType="date"
                    android:singleLine="true" />

                <LinearLayout
                    android:id="@+id/weight_and_height_container"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edit_text_weight"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:inputType="numberDecimal"
                        android:hint="体重(kg)"
                        android:singleLine="true" />

                    <EditText
                        android:id="@+id/edit_text_height"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:hint="身長(cm)"
                        android:inputType="numberDecimal"
                        android:singleLine="true" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="あなたの症状を教えてください。\n当てはまる○を押してください。"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="26dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="答えは、最も良い場合が１、最も悪い場合が５\nとお考え下さい。"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="26dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="1全くなし 2ほとんどなし 3少しあり 4中等度有り 5高度にあり"
            android:textAlignment="center"
            android:textSize="25dp" />

        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/wrap_all_question_categories"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:paddingStart="32dp"
                        android:text="からだの症状"
                        android:textColor="@color/black"
                        android:textSize="30dp"
                        android:textStyle="bold" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="4"
                        android:gravity="right">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="30dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:paddingEnd="30dp"
                            android:text="1" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="30dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:paddingEnd="30dp"
                            android:text="2" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="30dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:paddingEnd="30dp"
                            android:text="3" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="30dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:paddingEnd="30dp"
                            android:text="4" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="30dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:paddingEnd="30dp"
                            android:text="5" />
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ListView
                        android:id="@+id/lv_question"
                        android:layout_width="match_parent"
                        android:layout_height="1600dp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:paddingStart="32dp"
                        android:text="こころの症状"
                        android:textColor="@color/black"
                        android:textSize="30dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="4"
                        android:gravity="right">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="30dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:paddingEnd="30dp"
                            android:text="1" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="30dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:paddingEnd="30dp"
                            android:text="2" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="30dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:paddingEnd="30dp"
                            android:text="3" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="30dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:paddingEnd="30dp"
                            android:text="4" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="30dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:paddingEnd="30dp"
                            android:text="5" />
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ListView
                        android:id="@+id/lv_question_2"
                        android:layout_width="match_parent"
                        android:layout_height="1300dp" />
                </LinearLayout>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:paddingStart="32dp"
                        android:text="生活習慣(なしの場合はゼロとお書き下さい)"
                        android:textColor="@color/black"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        android:layout_marginTop="16dp"/>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/lifestyle_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="5">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="タバコ"
                            android:textSize="30dp"
                            android:paddingStart="32dp"
                            android:layout_marginBottom="7dp"
                            android:textColor="@color/black"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="酒(/日)"
                            android:textSize="30dp"
                            android:paddingStart="32dp"
                            android:layout_marginBottom="7dp"
                            android:textColor="@color/black"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="酒(/週)"
                            android:textSize="30dp"
                            android:paddingStart="32dp"
                            android:layout_marginBottom="7dp"
                            android:textColor="@color/black"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="運動"
                            android:textSize="30dp"
                            android:paddingStart="32dp"
                            android:layout_marginBottom="7dp"
                            android:textColor="@color/black"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="睡眠時間"
                            android:textSize="30dp"
                            android:paddingStart="32dp"
                            android:layout_marginBottom="7dp"
                            android:textColor="@color/black"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="水分摂取"
                            android:textSize="30dp"
                            android:paddingStart="32dp"
                            android:layout_marginBottom="7dp"
                            android:textColor="@color/black"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="TV画面などの注視時間"
                            android:textSize="30dp"
                            android:paddingStart="32dp"
                            android:textColor="@color/black"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lifestyle_per"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="１日"
                            android:textSize="30dp"
                            android:layout_marginBottom="7dp"
                            android:textColor="@color/black"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="１日"
                            android:textSize="30dp"
                            android:layout_marginBottom="7dp"
                            android:textColor="@color/black"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="飲酒は週"
                            android:textSize="30dp"
                            android:layout_marginBottom="7dp"
                            android:textColor="@color/black"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="週"
                            android:textSize="30dp"
                            android:layout_marginBottom="7dp"
                            android:textColor="@color/black"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="１日"
                            android:textSize="30dp"
                            android:layout_marginBottom="7dp"
                            android:textColor="@color/black"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="１日"
                            android:textSize="30dp"
                            android:layout_marginBottom="7dp"
                            android:textColor="@color/black"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="１日"
                            android:textSize="30dp"
                            android:textColor="@color/black"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lifestyle_question_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="3">

                        <EditText
                            android:id="@+id/smoking"
                            android:inputType="number"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <EditText
                            android:id="@+id/alcohol_per_day"
                            android:inputType="number"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                        <EditText
                            android:id="@+id/alcohol_per_week"
                            android:inputType="number"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                        <EditText
                            android:id="@+id/exercise"
                            android:inputType="number"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                        <EditText
                            android:id="@+id/sleep_time"
                            android:inputType="number"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                        <EditText
                            android:id="@+id/hydration"
                            android:inputType="number"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                        <EditText
                            android:id="@+id/tv_watching"
                            android:inputType="number"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lifestyle_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="本"
                            android:textSize="30dp"
                            android:layout_marginBottom="7dp"
                            android:textColor="@color/black"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="合"
                            android:textSize="30dp"
                            android:layout_marginBottom="7dp"
                            android:textColor="@color/black"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="日"
                            android:textSize="30dp"
                            android:layout_marginBottom="7dp"
                            android:textColor="@color/black"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="日"
                            android:textSize="30dp"
                            android:layout_marginBottom="7dp"
                            android:textColor="@color/black"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="時間"
                            android:textSize="30dp"
                            android:layout_marginBottom="7dp"
                            android:textColor="@color/black"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="リットル"
                            android:textSize="30dp"
                            android:layout_marginBottom="7dp"
                            android:textColor="@color/black"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="時間"
                            android:textSize="30dp"
                            android:textColor="@color/black"/>
                    </LinearLayout>


                </LinearLayout>

                <Button
                    android:id="@+id/btn_send_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="@color/dark_green"
                    android:padding="10dp"
                    android:text="送信する"
                    android:textColor="@color/light_green"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/cl_question"/>
            </LinearLayout>

        </ScrollView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>